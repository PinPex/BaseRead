<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BaseRead.Views.DataBaseView">

	<UserControl.Styles>
		<StyleInclude Source="/Styles/Style.axaml"/>
	</UserControl.Styles>

	<Grid RowDefinitions="*, 50" ColumnDefinitions="*">
		<Button Classes="gridBtn" Grid.Row="1" Grid.Column="0" Content="Открыть редактор запросов" Command="{Binding $parent[Window].DataContext.OpenRequestEditor}"/>
	</Grid>
	
</UserControl>
